<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<VBox fx:controller="view.viewLivro.DetalhesLivroController" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="tituloPrincipalLabel" text="Detalhes do Livro" style="-fx-font-size: 18px; -fx-font-weight: bold;">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>
    <GridPane hgap="10" vgap="5">
        <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="tituloDetalheLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Autor:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="autorDetalheLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Editora:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="editoraDetalheLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="ISBN:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="isbnDetalheLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Ano:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="anoDetalheLabel" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Gênero:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="generoDetalheLabel" text="-" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Lido:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="lidoDetalheLabel" text="-" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Nota Média:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="notaMediaDetalheLabel" text="-" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    </GridPane>
    <Button text="Fechar" onAction="#handleFecharDialog" alignment="CENTER" style="-fx-margin-top: 20px;"/>
</VBox>