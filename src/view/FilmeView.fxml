<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" style="-fx-background-color: #F9F9F9;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FilmeViewController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <GridPane hgap="10.0" vgap="8.0">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="60.0" prefWidth="70.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints halignment="RIGHT" minWidth="60.0" prefWidth="70.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> </rowConstraints>
        <children>
            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="tituloSearchField" promptText="Buscar por título" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Diretor:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="diretorSearchField" promptText="Buscar por diretor" style="-fx-font-size: 13px;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Elenco:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="atorSearchField" promptText="Buscar por ator no elenco" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Gênero:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="generoSearchField" promptText="Filtrar por gênero" style="-fx-font-size: 13px;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Ano:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="anoSearchField" promptText="Filtrar por ano (ex: 2023)" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #333333;" text="Ordenar por:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ComboBox fx:id="ordenarFilmeComboBox" maxWidth="Infinity" promptText="Padrão" style="-fx-font-size: 13px;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="3">
                <children>
                    <Button fx:id="buscarButton" onAction="#executarBuscaFiltragemOrdenacao" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 4;" text="Buscar/Filtrar" />
                    <Button fx:id="limparFiltrosButton" onAction="#handleLimparFiltros" style="-fx-font-size: 13px; -fx-background-radius: 4;" text="Limpar Tudo" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="adicionarFilmeButton" onAction="#handleAdicionarNovoFilme" prefHeight="27.0" prefWidth="171.0" style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 4;" text="+ Adicionar Novo Filme" textAlignment="CENTER" />
                </children>
                <GridPane.margin>
                    <Insets top="5.0" />
                </GridPane.margin>
            </HBox>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </GridPane>

    <ListView fx:id="filmesListView" style="-fx-background-color: #FFFFFF;" VBox.vgrow="ALWAYS" />

    <Label fx:id="statusLabel" alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="25.0" style="-fx-font-size: 12px; -fx-text-fill: #555555;" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
        <padding>
            <Insets left="5.0" />
        </padding>
    </Label>
</VBox>
