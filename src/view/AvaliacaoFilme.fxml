<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="view.AvaliacaoFilmeController" spacing="15.0" style="-fx-background-color: #F9F9F9;" prefWidth="400.0"
      xmlns:fx="http://javafx.com/fxml/1"   xmlns="http://javafx.com/javafx/21">
    <padding>
        <Insets top="20.0" right="25.0" bottom="20.0" left="25.0" />
    </padding>
    <children>
        <Label fx:id="tituloDialogoLabel" text="Avaliar Filme:" VBox.vgrow="NEVER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="nomeFilmeLabel" text="[Nome do Filme]" style="-fx-font-size: 14px; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets bottom="15.0" />
            </VBox.margin>
        </Label>

        <GridPane hgap="10.0" vgap="8.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nota (0-5):" GridPane.rowIndex="0" style="-fx-font-size: 13px;"/>
                <TextField fx:id="notaField" promptText="Ex: 4" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 13px;"/>
            </children>
        </GridPane>

        <Label text="Seu Comentário:" style="-fx-font-size: 13px; -fx-font-weight: normal; -fx-padding: 10 0 0 0;"/>
        <TextArea fx:id="comentarioTextArea" prefHeight="100.0" prefRowCount="4" wrapText="true" style="-fx-font-size: 13px;"/>

        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="salvarButton" mnemonicParsing="false" onAction="#handleSalvarAvaliacao" text="Salvar Avaliação"
                        style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 4;"/>
                <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar"
                        style="-fx-font-size: 13px; -fx-background-radius: 4;"/>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>